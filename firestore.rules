rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to approved comments and suggestions
    match /comments/{document} {
      allow read: if resource.data.approved == true;
      allow create: if request.auth == null && 
                    request.resource.data.keys().hasAll(['content', 'author', 'timestamp', 'approved']) &&
                    request.resource.data.approved == false &&
                    request.resource.data.content is string &&
                    request.resource.data.content.size() <= 1000;
    }
    
    match /suggestions/{document} {
      allow read: if resource.data.approved == true;
      allow create: if request.auth == null && 
                    request.resource.data.keys().hasAll(['title', 'description', 'author', 'timestamp', 'approved']) &&
                    request.resource.data.approved == false &&
                    request.resource.data.title is string &&
                    request.resource.data.description is string &&
                    request.resource.data.title.size() <= 200 &&
                    request.resource.data.description.size() <= 1000;
    }
    
    // Admin-only access for approval and management
    match /admin/{document} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Public read access to stats
    match /stats/{document} {
      allow read: if true;
      allow write: if false; // Only server can write stats
    }
  }
}
